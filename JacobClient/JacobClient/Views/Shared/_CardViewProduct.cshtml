@using JacobClient.Models
@model Product
<div id="table-body">
    <div class="col-md-3">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Id, new { @class = "" })
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Name, new { @class = "" })
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Weight, new { @class = "" })
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Weight, new { @class = "form-control" })
        </div>
    </div>
</div>