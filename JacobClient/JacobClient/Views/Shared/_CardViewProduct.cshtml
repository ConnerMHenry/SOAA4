@using JacobClient.Models
@model Product
<div id="tableProduct" class="well">
    <div class="row">
        <h3><strong>Product</strong></h3>
    </div>
    <fieldset @Html.Raw(Model.IsControlEnabled ? "" : "disabled")>
        <div class="row">
            <div class="col-md-3">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.Id, new { @class = "" })
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.Name, new { @class = "" })
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.Weight, new { @class = "" })
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Weight, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </fieldset>
</div>